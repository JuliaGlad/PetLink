<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/event_theme"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_event_theme"/>

    <ImageView
        android:id="@+id/selected_theme_icon"
        android:src="@drawable/ic_check_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/event_theme"
        app:layout_constraintEnd_toEndOf="@id/event_theme"
        app:layout_constraintTop_toTopOf="@id/event_theme"
        app:layout_constraintBottom_toBottomOf="@id/event_theme"/>

</merge>