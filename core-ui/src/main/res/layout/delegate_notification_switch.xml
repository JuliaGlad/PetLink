<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_thumb_switch"
        android:fontFamily="@font/roboto_bold"
        app:thumbTint="@color/bg_thumb_switch"
        app:trackDecorationTint="@color/bg_thumb_switch"
        app:trackTint="@color/bg_tracks_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ON" />

    <TextView
        android:id="@+id/switch_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/icon_color"
        android:textSize="16sp"
        android:text="@string/notifications"
        app:layout_constraintStart_toEndOf="@id/switch_item"
        app:layout_constraintTop_toTopOf="@id/switch_item"
        app:layout_constraintBottom_toBottomOf="@id/switch_item" />

    <TextView
        android:id="@+id/switch_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/notifications"
        app:layout_constraintStart_toEndOf="@id/switch_description"
        app:layout_constraintTop_toTopOf="@id/switch_item"
        app:layout_constraintBottom_toBottomOf="@id/switch_item" />

</androidx.constraintlayout.widget.ConstraintLayout>