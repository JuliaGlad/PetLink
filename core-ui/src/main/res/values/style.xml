<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton.PetLink" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="fontFamily">@font/roboto_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/roboto_semibold</item>
    </style>

    <style name="Widget.Material3.TextInputLayout.OutlinedBox.PetLink" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxBackgroundColor">@color/green_grey</item>
        <item name="android:textColorHint">@color/medium_green</item>
        <item name="cursorColor">@color/medium_green</item>
    </style>

    <style name="Widget.Material3.TextInputLayout.Dialog.OutlinedBox.PetLink" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxBackgroundColor">@color/medium_green_grey</item>
        <item name="android:textColorHint">@color/dark_green</item>
        <item name="cursorColor">@color/dark_green</item>
    </style>


    <style name="TabTextUnselected">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TabTextSelected">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.MaterialComponents.LinearProgressIndicator.PetLink" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackCornerRadius">10dp</item>
        <item name="trackThickness">12dp</item>
        <item name="trackColor">@color/green_grey</item>
        <item name="android:max">100</item>
        <item name="indicatorColor">@color/dark_green_variant</item>
    </style>

    <style name="Widget.Material3.Button.TonalButton.PetLink" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/medium_green_grey</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/medium_green</item>
    </style>

    <style name="Widget.Material3.Button.TextButton.Dialog.PetLink" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/medium_green</item>
    </style>

    <style name="PrimaryButton.Variant.PetLink" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/bg_button_primary_variant</item>
        <item name="fontFamily">@font/roboto_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_green_variant</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/roboto_semibold</item>
    </style>
</resources>